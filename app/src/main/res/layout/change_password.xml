<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prigasolutions.spnb.Login">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <include layout="@layout/app_bar" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/fulllogo"
        android:layout_below="@+id/toolBar"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tukar kata laluan"
        android:id="@+id/change_pass"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_box"
        android:id="@+id/old_password"
        android:hint="Kata laluan sedia ada *"
        android:inputType="textPassword"
        android:layout_below="@+id/change_pass"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:typeface="monospace"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#B3B3B3"
        android:textColor="#B3B3B3" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_box"
        android:id="@+id/new_password"
        android:hint="Kata laluan baru *"
        android:inputType="textPassword"
        android:layout_below="@+id/old_password"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:typeface="monospace"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#B3B3B3"
        android:textColor="#B3B3B3" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_box"
        android:id="@+id/confirm_new_password"
        android:hint="Pastikan Kata laluan baru *"
        android:inputType="textPassword"
        android:layout_below="@+id/new_password"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:typeface="monospace"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#B3B3B3"
        android:textColor="#B3B3B3" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:id="@+id/button"
        android:background="#F3554A"
        android:textAllCaps="false"
        android:typeface="normal"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:layout_below="@+id/confirm_new_password"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:textStyle="bold" />




</RelativeLayout>